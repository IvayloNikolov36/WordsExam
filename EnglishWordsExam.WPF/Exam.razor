<div class="container-fluid m-3">
    <div class="d-flex flex-column w-50 mx-auto my-5">
        @if (!isStarted)
        {
            <div>
                <span class="text-info text-capitalize">@totalWordsCount words in the file.</span>

                <div class="d-flex flex-column me-5 mt-2">
                    <div class="my-1">
                        <span>Choose words count to translate: (@wordsToTranslate)</span>
                    </div>
                    <input @bind-value="wordsToTranslate" type="range" class="form-range" min="1" max="@totalWordsCount" step="1" id="wordsToTranslate">
                </div>
                @if (wordsToTranslate > 0)
                {
                    <div class="d-flex justify-content-start gap-5 w-50 mt-2">
                        <button class="btn btn-primary" @onclick="SelectEnglishToBulgarian">
                            EN -> BG
                        </button>
                        <button class="btn btn-primary" @onclick="SelectBulgarianToEnglish">
                            BG -> EN
                        </button>
                    </div>
                }
            </div>
        }
        else
        {
            @if (examMessage != null)
            {
                <div id="exam-message" class="mt-3">
                    <span class="fs-3 text-info fw-bold">@(examMessage)</span>
                </div>
            }
            <div class="d-flex flex-column w-50 mt-4">
                <div class="mb-3">
                    <label for="questionArea" class="form-label">Question @(questionNumber) of @(wordsToTranslate):</label>
                    <input type="text" @bind="Question" @bind:event="onset" class="form-control" id="questionArea" />
                </div>
                @if (hints != null)
                {
                    <div class="mb-3">
                        <label for="hintsArea" class="form-label">Hints:</label>
                        <textarea type="text" @bind="hints" @bind:event="onset" class="form-control" id="hintsArea" rows="7" />
                    </div>
                }
                <div class="mb-3">
                    <label for="answerArea" class="form-label">Answer:</label>
                    <input type="text" @bind="Answer" @bind:event="onchange" class="form-control" id="answerArea" />
                    @if (hints == null && !isRight.HasValue)
                    {
                        <div class="mt-2">
                            <span class="text-info" @onclick="OnHintRequired">Need a hint?</span>
                        </div>
                    }
                    @if (isRight.HasValue)
                    {
                        @if (isRight.Value)
                        {
                            <span class="text-bg-success mt-2 ms-3">That's right!</span>
                        }
                        else
                        {
                            <span class="text-bg-danger mt-2 ms-3">You are wrong!</span>
                        }
                    }
                </div>

                @if (AllTranslations?.Length > 1)
                {
                    <div class="d-flex flex-column mb-3">
                        <span class="fs-3">
                            <span class="text-info">@Question</span> all translations:
                        </span>
                        @for (int i = 0; i < AllTranslations.Length; i++)
                        {
                            <div class="mt-2">
                                @if (AllTranslations[i].Equals(answer))
                                {
                                    <span class="text-bg-success">@(i + 1). @AllTranslations[i]</span>
                                }
                                else
                                {
                                    <span>@(i + 1). @AllTranslations[i]</span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>